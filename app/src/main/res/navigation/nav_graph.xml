<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/episodesListingFragment">

    <fragment
        android:id="@+id/episodesListingFragment"
        android:name="com.guestlogix.takehome.fragments.EpisodesListingFragment"
        android:label="fragment_main"
        tools:layout="@layout/fragment_main" >
        <action
            android:id="@+id/action_episodesListingFragment_to_charactersListFragment"
            app:destination="@id/charactersListFragment"
            app:enterAnim="@anim/enter_from_right"
            app:exitAnim="@anim/exit_to_right"
            app:popEnterAnim="@anim/enter_from_right"
            app:popExitAnim="@anim/exit_to_right" />
    </fragment>

    <fragment
        android:id="@+id/charactersListFragment"
        android:name="com.guestlogix.takehome.fragments.EpisodesListingFragment"
        android:label="fragment_main"
        tools:layout="@layout/fragment_characters_list" />
</navigation>