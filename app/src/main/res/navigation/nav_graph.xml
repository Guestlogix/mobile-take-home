<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/episodesListingFragment">

    <fragment
        android:id="@+id/episodesListingFragment"
        android:name="com.guestlogix.takehome.fragments.EpisodesListingFragment"
        android:label="Episodes"
        tools:layout="@layout/fragment_main">
        <action
            android:id="@+id/action_episodesListingFragment_to_charactersListFragment"
            app:destination="@id/charactersListFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim" />
    </fragment>
    <fragment
        android:id="@+id/charactersListFragment"
        android:name="com.guestlogix.takehome.fragments.CharactersListFragment"
        android:label="Characters"
        tools:layout="@layout/fragment_characters_list">
        <argument
            android:name="viewArgs"
            app:argType="string" />
        <action
            android:id="@+id/action_charactersListFragment_to_characterDetailFragment"
            app:destination="@id/characterDetailFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim" />
    </fragment>
    <fragment
        android:id="@+id/characterDetailFragment"
        android:name="com.guestlogix.takehome.fragments.CharacterDetailFragment"
        android:label="fragment_characters_detail"
        tools:layout="@layout/fragment_characters_detail" >
        <argument android:name="viewArgs" app:argType="com.guestlogix.takehome.data.Character" />
    </fragment>
</navigation>